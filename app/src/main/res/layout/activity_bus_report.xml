<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".busReport">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/lltag"

        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="Flag No"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textAlignment="center"

            android:textSize="15sp"
            android:id="@+id/flagTitle"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="Fixed Time"
            android:textAlignment="center"
            android:id="@+id/acTitle"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/flagTitle"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Reached Time"
            android:textAlignment="center"
            android:layout_toRightOf="@id/acTitle"
            android:id="@+id/reached_time"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Total Delay"
            android:textAlignment="center"
            android:layout_toRightOf="@id/reached_time"
            android:id="@+id/td"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textAlignment="center"
            android:layout_toRightOf="@id/td"
            android:id="@+id/st"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginRight="10dp"
            />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/vv1"
        android:layout_below="@+id/lltag"
        android:background="@android:color/darker_gray" />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_below="@+id/vv1"
        android:id="@+id/recycleview_report"
        android:layout_height="match_parent"/>


</RelativeLayout>