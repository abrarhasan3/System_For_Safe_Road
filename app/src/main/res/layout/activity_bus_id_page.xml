<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bus_id_page"
    android:id="@+id/drawerLayout">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/drawerLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/mybeigeblue"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/user_menu"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_menu_24"
                android:contentDescription="@string/app_name"
                />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:id="@+id/user_navigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:orientation="vertical"
                android:background="#B8BABC">
                <TextView
                    android:id="@+id/drawerBusId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bus Id"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:gravity="bottom"
                    android:layout_above="@+id/drawerRouteId"/>
                <TextView
                    android:id="@+id/drawerRouteId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Route id"
                    android:textSize="18dp"
                    android:textColor="@color/white"
                    android:layout_gravity="bottom"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

        </LinearLayout>

    </com.google.android.material.navigation.NavigationView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please Enter Your Trip ID"
            android:layout_above="@+id/busIdEdit"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginBottom="30dp"
            />

        <EditText
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/busIdEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="ID"
            tools:layout_editor_absoluteX="100dp"
            tools:layout_editor_absoluteY="305dp" />

        <Button
            android:id="@+id/confirm_button1"
            android:layout_below="@+id/busIdEdit"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:backgroundTint="@color/mybeigeblue"/>
    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>